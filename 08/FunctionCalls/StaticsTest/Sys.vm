// Tests that different functions, stored in two different 
// class files, manipulate the static segment correctly. 

function Sys.init 0
    push constant 6
    push constant 8
    call Class1.set 2   // Now, static[0] == 6 and static[1] == 8
    pop temp 0          // Dumps the return value
    push constant 23
    push constant 15
    call Class2.set 2   // Now, static[0] == 23 and static[1] == 15
    pop temp 0          // Dumps the return value
    call Class1.get 0   // Does static[0] - static[1], giving 8.
    call Class2.get 0   // Does static[0] - static[1], giving 8.
    label WHILE
    goto WHILE
